<ul>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article) %>
      <%= link_to "Delete",
            article_path(article),
            method: :delete,
            data: { confirm: "Are you sure you want to delete #{article.title}?" } %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new article", new_article_path %>
